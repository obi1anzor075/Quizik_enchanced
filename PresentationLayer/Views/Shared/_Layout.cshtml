<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="keywords" content="викторины, Quiz-go">
	<!-- Open Graph Tags (для социальных сетей)-->
	<meta name="description" content="Участвуйте в увлекательных викторинах на сайте Quiz-go. Проверьте свои знания и узнайте больше!">
	<meta property="og:title" content="Quiz-go - Викторины про все!">
	<meta property="og:description" content="Участвуйте в увлекательных викторинах на сайте Quiz-go. Проверьте свои знания и узнайте больше!">
	<meta property="og:image" content="https://quiz-go.ru/img/favicon.webp">
	<meta property="og:url" content="https://quiz-go.ru">
	<meta property="og:type" content="website">
		<!-- /Open Graph Tags (для социальных сетей)-->
	<!-- Twitter Card Tags-->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="Quiz-go - Викторины про все!">
	<meta name="twitter:description" content="Участвуйте в увлекательных викторинах на сайте Quiz-go. Проверьте свои знания и узнайте больше!">
	<meta name="twitter:image" content="https://quiz-go.ru/img/favicon.webp">
	<!-- /Twitter Card Tags-->
	<title>@ViewData["Title"] | Quiz-go</title>
	<link rel="icon" href="~/img/favicon.webp" type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/loading.css"/>
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
		  rel="stylesheet" />
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div id="loading" class="loading">
		<!-- Floating background orbs -->
		<div class="orb orb-1"></div>
		<div class="orb orb-2"></div>
		<div class="orb orb-3"></div>

		<!-- Main loading content -->
		<div class="loading-content">
			<!-- Logo with rotating rings -->
			<div class="logo-container">
				<div class="ring ring-1"></div>
				<div class="ring ring-2"></div>
				<div class="ring ring-3"></div>
				<div class="logo-text">Q</div>
			</div>

			<!-- Loading information -->
			<div class="loading-info">
				<p class="loading-label-page">Загружаем викторину...</p>
				<div class="progress-container">
					<div class="progress-bar"></div>
				</div>
				<div class="loading-dots">
					<div class="dot"></div>
					<div class="dot"></div>
					<div class="dot"></div>
				</div>
			</div>
		</div>
	</div>
	<!-- Background effects -->
	<div class="bg-effects">
		<div class="orb orb-primary"></div>
		<div class="orb orb-secondary"></div>
		<div class="orb orb-tertiary"></div>
		<div class="particles" id="backParticles"></div>
	</div>
<div class="main">
        @RenderBody()
</div>
	<script src="~/js/loading.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/retrieveUserName.js"></script>

	<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	<script type="text/javascript">
		window.onload = function () {
		    var loading = document.getElementById('loading');
		    
		    setTimeout(function () {
		        if (loading) {
		            loading.classList.add('hidden');  
		        }
		    }, 200); 
		
		    // Ждём окончания анимации и устанавливаем display: none
		    loading.addEventListener('transitionend', function () {
		        loading.style.display = 'none';  // Скрываем элемент после завершения анимации
		    });
		};
	</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
