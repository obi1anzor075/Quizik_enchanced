<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
	<meta name="keywords" content="викторины, Quizik">
	<!-- Open Graph Tags (для социальных сетей)-->
	<meta name="description" content="Участвуйте в увлекательных викторинах на сайте Quizik. Проверьте свои знания и узнайте больше!">
	<meta property="og:title" content="Quizik - Викторины про все!">
	<meta property="og:description" content="Участвуйте в увлекательных викторинах на сайте Quizik. Проверьте свои знания и узнайте больше!">
	<meta property="og:image" content="https://quizik.fun/img/favicon.webp">
	<meta property="og:url" content="https://quizik.fun">
	<meta property="og:type" content="website">
		<!-- /Open Graph Tags (для социальных сетей)-->
	<!-- Twitter Card Tags-->
	<meta name="twitter:card" content="summary_large_image">
	<meta name="twitter:title" content="Quizik - Викторины про все!">
	<meta name="twitter:description" content="Участвуйте в увлекательных викторинах на сайте Quizik. Проверьте свои знания и узнайте больше!">
	<meta name="twitter:image" content="https://quizik.fun/img/favicon.webp">
	<!-- /Twitter Card Tags-->
	<title>@ViewData["Title"] | Quizik</title>
	<link rel="icon" href="~/img/favicon.webp" type="image/x-icon" />
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PresentationLayer.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/loading.css"/>
	<link rel="preconnect" href="https://fonts.googleapis.com" />
	<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	<link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100..900;1,100..900&display=swap"
		  rel="stylesheet" />
	<link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
	<div id="loading" class="loading">
		<!-- Floating background orbs -->
		<div class="orb orb-1"></div>
		<div class="orb orb-2"></div>
		<div class="orb orb-3"></div>

		<!-- Main loading content -->
		<div class="loading-content">
			<!-- Logo with rotating rings -->
			<div class="logo-container">
				<div class="ring ring-1"></div>
				<div class="ring ring-2"></div>
				<div class="ring ring-3"></div>
				<div class="logo-text">Q</div>
			</div>

			<!-- Loading information -->
			<div class="loading-info">
				<p class="loading-label-page">Загружаем викторину...</p>
				<div class="progress-container">
					<div class="progress-bar"></div>
				</div>
				<div class="loading-dots">
					<div class="dot"></div>
					<div class="dot"></div>
					<div class="dot"></div>
				</div>
			</div>
		</div>
	</div>
	<div class="backwrap">
		<!-- Floating background orbs for main page -->
		<div class="main-orb main-orb-1"></div>
		<div class="main-orb main-orb-2"></div>
		<div class="main-orb main-orb-3"></div>
		<div class="main-orb main-orb-4"></div>

		<!-- New animated effects -->
		<div class="animated-effects">
			<!-- Particles will be generated by JS -->
			<!-- Geometric shapes -->
			<div class="geometric-shape diamond" style="top: 20%; left: 15%; animation-delay: 0s;"></div>
			<div class="geometric-shape hexagon" style="top: 60%; left: 80%; animation-delay: 2s;"></div>
			<div class="geometric-shape pentagon" style="top: 40%; left: 25%; animation-delay: 4s;"></div>
			<div class="geometric-shape diamond" style="top: 75%; left: 60%; animation-delay: 1s;"></div>
			<div class="geometric-shape hexagon" style="top: 15%; left: 70%; animation-delay: 3s;"></div>
			<div class="geometric-shape pentagon" style="top: 85%; left: 20%; animation-delay: 5s;"></div>

			<!-- Glowing dots -->
			<div class="glow-dot" style="top: 25%; left: 45%; animation-delay: 0s;"></div>
			<div class="glow-dot" style="top: 65%; left: 15%; animation-delay: 1s;"></div>
			<div class="glow-dot" style="top: 35%; left: 75%; animation-delay: 2s;"></div>
			<div class="glow-dot" style="top: 80%; left: 50%; animation-delay: 1.5s;"></div>
			<div class="glow-dot" style="top: 10%; left: 30%; animation-delay: 2.5s;"></div>

			<!-- Floating lines -->
			<div class="floating-line" style="top: 30%; width: 150px; animation-delay: 0s;"></div>
			<div class="floating-line" style="top: 70%; width: 200px; animation-delay: 3s;"></div>
			<div class="floating-line" style="top: 50%; width: 120px; animation-delay: 6s;"></div>

			<!-- Spirals -->
			<div class="spiral" style="top: 45%; left: 10%; animation-delay: 0s;"></div>
			<div class="spiral" style="top: 25%; left: 85%; animation-delay: 2s;"></div>
			<div class="spiral" style="top: 70%; left: 40%; animation-delay: 4s;"></div>

			<!-- Constellations -->
			<div class="constellation" style="top: 18%; left: 55%; animation-delay: 0s;"></div>
			<div class="constellation" style="top: 55%; left: 90%; animation-delay: 2s;"></div>
			<div class="constellation" style="top: 90%; left: 35%; animation-delay: 1s;"></div>
			<div class="constellation" style="top: 38%; left: 8%; animation-delay: 3s;"></div>

			<!-- Waves -->
			<div class="wave" style="top: 12%; left: 25%; animation-delay: 0s;"></div>
			<div class="wave" style="top: 78%; left: 75%; animation-delay: 3s;"></div>
		</div>
	</div>
<div class="main">
        @RenderBody()
</div>
	<script src="~/js/loading.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
	<script src="~/js/retrieveUserName.js"></script>

	<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.6.0.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.19.3/jquery.validate.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/mvc/5.2.3/jquery.validate.unobtrusive.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/js-cookie/3.0.1/js.cookie.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>
	<script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>

	<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.18/signalr.min.js"></script>

	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

	<script type="text/javascript">
		window.onload = function () {
		    var loading = document.getElementById('loading');
		    
		    setTimeout(function () {
		        if (loading) {
		            loading.classList.add('hidden');  
		        }
		    }, 200); 
		
		    // Ждём окончания анимации и устанавливаем display: none
		    loading.addEventListener('transitionend', function () {
		        loading.style.display = 'none';  // Скрываем элемент после завершения анимации
		    });
		};
	</script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
