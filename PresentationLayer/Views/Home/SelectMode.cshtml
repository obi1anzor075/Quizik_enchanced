<script>
    $(document).ready(function () {
        // === SignalR connection ===
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/gameHub")
            .build();

        // UI elements
        const $chatCircle = $("#chat-circle");
        const $chatBox = $(".chat-box");
        const $chatLog = $(".chat-log");
        const $chatLogs = $(".chat-logs");
        const $chatBoxToggle = $(".chat-box-toggle");
        const $chatLogToggle = $(".chat-log-toggle");
        const $chatSubmit = $("#chat-submit");
        const $chatInput = $("#chat-input");

        // Random avatars list
        const randomAvatars = [
            '/img/chat-logo/logo1.svg',
            '/img/chat-logo/logo2.svg',
            '/img/chat-logo/logo3.svg',
            '/img/chat-logo/logo4.svg'
        ];

        // Avatar functions
        function generateAvatar(userName) {
            if (userName === 'Quizik') {
                return '/img/chat-logo/Admin-logo.webp';
            } else {
                const randomIndex = Math.floor(Math.random() * randomAvatars.length);
                return randomAvatars[randomIndex];
            }
        }

        function getAvatar(userName) {
            let avatar = localStorage.getItem(`avatar_${userName}`);
            if (!avatar) {
                avatar = generateAvatar(userName);
                localStorage.setItem(`avatar_${userName}`, avatar);
            }
            return avatar;
        }

        // Generate message HTML. isSelf controls 'self' class and label "Вы:"
        function generateMessageHTML(userName, message, isSelf = false) {
            const avatarSrc = getAvatar(userName || 'Guest');
            const userLabel = isSelf ? 'Вы' : userName;
            const selfClass = isSelf ? ' self' : '';
            return `
                <div class="chat-msg${selfClass}">
                    <span class="msg-avatar">
                        <img class="avatar-img" src="${avatarSrc}" alt="avatar">
                    </span>
                    <div class="cm-msg-text"><strong>${userLabel}:</strong> ${escapeHtml(message)}</div>
                </div>
            `;
        }

        // Simple HTML escape
        function escapeHtml(text) {
            return text
                .replace(/&/g, "&amp;")
                .replace(/</g, "&lt;")
                .replace(/>/g, "&gt;")
                .replace(/"/g, "&quot;")
                .replace(/'/g, "&#039;");
        }

        // Scroll chat to bottom
        function scrollChatToBottom() {
            requestAnimationFrame(function () {
                const chat = document.getElementById("chat-logs");
                if (chat) chat.scrollTop = chat.scrollHeight;
            });
        }

        // Local state
        let localUserName = '';

        // Start connection and get username
        connection.start()
            .then(async function () {
                console.log("SignalR connection established.");
                try {
                    const response = await fetch('/Home/GetUserName');
                    const data = await response.json();
                    localUserName = data.userName || '';

                    if (localUserName) {
                        console.log("Retrieved user name: " + localUserName);
                        localStorage.setItem('userName', localUserName);
                        joinChat(localUserName);
                    } else {
                        console.log("User name not found in cookies.");
                    }
                } catch (error) {
                    console.error('Error fetching user name:', error);
                }
            })
            .catch(function (err) {
                console.error(err.toString());
            });

        // Join chat on the hub
        function joinChat(userName) {
            const connectionInfo = { userName: userName, chatRoom: "Global" };
            connection.invoke("JoinChat", connectionInfo)
                .then(function () {
                    $chatBox.show('scale');
                    $chatLog.hide('scale');
                    $chatCircle.hide(); // hide circle when box shown
                    scrollChatToBottom();
                })
                .catch(function (err) {
                    console.error(err.toString());
                });
        }

        // Send message through SignalR
        async function sendMessage(userName, message) {
            if (!connection) return;
            try {
                await connection.invoke("SendMessage", userName, message);
            } catch (err) {
                console.error(err.toString());
            }
        }

        // Receive messages from SignalR
        connection.on("ReceiveMessage", function (userName, message) {
            // Avoid duplicating local message if server echoes back the same user
            const storedLocalUser = localStorage.getItem('userName') || localUserName;
            if (storedLocalUser && userName === storedLocalUser) {
                // Ignore server echo from same user to prevent duplicate
                return;
            }
            $chatLogs.append(generateMessageHTML(userName, message, false));
            scrollChatToBottom();
        });

        // === UI interactions (integrated demo logic) ===

        // Click chat circle -> show chat box
        $chatCircle.off('click').on('click', function () {
            $chatCircle.hide('scale');
            $chatBox.show('scale');
            // If username known, ensure it's stored in localStorage
            if (localUserName) localStorage.setItem('userName', localUserName);
        });

        // Chat box toggle -> hide chat box and show circle
        $chatBoxToggle.off('click').on('click', function () {
            $chatBox.hide('scale', function () {
                $chatCircle.show('scale');
            });
        });

        // Chat log toggle (if used separately)
        $chatLogToggle.off('click').on('click', function () {
            $chatLog.toggle('scale');
        });

        // Submit message (button)
        $chatSubmit.off('click').on('click', async function (e) {
            e.preventDefault();
            const message = $chatInput.val() || '';
            const userName = localStorage.getItem('userName') || localUserName || 'Guest';

            if (message.trim() === '') {
                return;
            }

            // Append local message immediately
            $chatLogs.append(generateMessageHTML(userName, message, true));
            scrollChatToBottom();

            // Clear input
            $chatInput.val('');

            // Send to server
            await sendMessage(userName, message);
        });

        // Send on Enter
        $chatInput.off('keypress').on('keypress', function (e) {
            if (e.key === 'Enter') {
                e.preventDefault();
                $chatSubmit.click();
            }
        });

        // Delegate for quick chat buttons (if present)
        $(document).off('click', '.chat-btn').on('click', '.chat-btn', function () {
            const value = $(this).attr("chat-value");
            const name = $(this).html();
            $chatInput.attr("disabled", false);
            // Insert quick message and trigger send
            $chatInput.val(value);
            $chatSubmit.click();
        });

        // Ensure initial visibility: show circle, hide box if nothing else
        if (!$chatBox.is(':visible')) {
            $chatCircle.show();
            $chatBox.hide();
        }
    });

        function setUserNameCookie(userName) {
